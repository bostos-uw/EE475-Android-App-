<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Current Status -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/status_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_orange"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/current_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Status"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slouching"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/current_status_title"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/status_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consider sitting up straight"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/status_text"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_dialog_alert"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Sensor Widgets -->
        <LinearLayout
            android:id="@+id/sensor_widgets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/status_widget"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Upper Back -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/upper_back_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/outline_account_circle_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/upper_back_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upper Back"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/upper_back_icon"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/upper_back_sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor"
                        app:layout_constraintTop_toBottomOf="@id/upper_back_title"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:id="@+id/upper_back_battery_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_lock_idle_low_battery"
                        app:tint="@android:color/holo_green_dark"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/upper_back_sensor"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85%"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@id/upper_back_battery_icon"
                        app:layout_constraintTop_toTopOf="@id/upper_back_battery_icon"
                        app:layout_constraintBottom_toBottomOf="@id/upper_back_battery_icon"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lower Back -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/lower_back_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/outline_account_circle_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/lower_back_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lower Back"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/lower_back_icon"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/lower_back_sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor"
                        app:layout_constraintTop_toBottomOf="@id/lower_back_title"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:id="@+id/lower_back_battery_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_lock_idle_low_battery"
                        app:tint="@android:color/holo_green_dark"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/lower_back_sensor"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78%"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@id/lower_back_battery_icon"
                        app:layout_constraintTop_toTopOf="@id/lower_back_battery_icon"
                        app:layout_constraintBottom_toBottomOf="@id/lower_back_battery_icon"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Daily Goal -->
        <androidx.cardview.widget.CardView
            android:id="@+id/daily_goal_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/sensor_widgets"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/daily_goal_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_home_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@android:color/holo_blue_dark" />

                <TextView
                    android:id="@+id/daily_goal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Goal"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/daily_goal_icon"
                    app:layout_constraintTop_toTopOf="@id/daily_goal_icon"
                    app:layout_constraintBottom_toBottomOf="@id/daily_goal_icon"/>

                <TextView
                    android:id="@+id/daily_goal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/daily_goal_icon"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/daily_goal_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of 480 minutes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/daily_goal_value"/>

                <TextView
                    android:id="@+id/daily_goal_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/daily_goal_complete"/>

                <TextView
                    android:id="@+id/daily_goal_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/daily_goal_minutes"/>

                <ProgressBar
                    android:id="@+id/daily_goal_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/daily_goal_minutes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Widgets -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/daily_goal_widget"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Active Time -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/active_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/active_time_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="@android:color/holo_blue_dark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/active_time_title"/>

                    <TextView
                        android:id="@+id/active_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/active_time_icon"
                        app:layout_constraintTop_toTopOf="@id/active_time_icon"
                        app:layout_constraintBottom_toBottomOf="@id/active_time_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="minutes"
                        app:layout_constraintStart_toStartOf="@id/active_time_value"
                        app:layout_constraintTop_toBottomOf="@id/active_time_value"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Upright -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/upright_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upright"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/upright_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/outline_analytics_24"
                        app:tint="@android:color/holo_green_dark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/upright_title"/>

                    <TextView
                        android:id="@+id/upright_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/upright_icon"
                        app:layout_constraintTop_toTopOf="@id/upright_icon"
                        app:layout_constraintBottom_toBottomOf="@id/upright_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="of today"
                        app:layout_constraintStart_toStartOf="@id/upright_value"
                        app:layout_constraintTop_toBottomOf="@id/upright_value"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
